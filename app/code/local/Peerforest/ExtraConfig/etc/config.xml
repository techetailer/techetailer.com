<?xml version="1.0"?>
<config>
    <modules>
        <Peerforest_ExtraConfig>
            <version>1.0.0</version>
            <depends>
            <!-- no dependencies -->
            </depends>
        </Peerforest_ExtraConfig>
    </modules>
	<global>
	    <models>
		<ExtraConfig>
		    <class>Peerforest_ExtraConfig_Model</class>
		</ExtraConfig>
	    </models>
	    <helpers>
		<ExtraConfig>
			<class>Peerforest_ExtraConfig_Helper</class>
		</ExtraConfig>
	    </helpers>
	    <resources />
	    <extraconfig />
	    <blocks>
		<mygeneral><class>Peerforest_ExtraConfig_Block</class></mygeneral>
		<catalog>
		    <rewrite>
			<product_manufacturer>Peerforest_ExtraConfig_Block_Product_Manufacturer</product_manufacturer>
		    </rewrite>
		</catalog>
		<wishlist>
		    <rewrite>
			<links>Peerforest_ExtraConfig_Block_Wishlist_Links</links>
		    </rewrite>
		</wishlist>
		<page>
		    <rewrite> 
			<html_header>Peerforest_ExtraConfig_Block_Page_Html_Header</html_header>		 
		    </rewrite>
		    <layouts>
			<category module="page" translate="label">
				<label>Category</label>
				<template>page/category.phtml</template>
				<layout_handle>page_category</layout_handle>
			</category>
		    </layouts>
		</page>
	    </blocks>
	</global>
	
	<!---->
	<default>
	    <mygeneral>
		
		<header>
		    <header_type>header</header_type>
		    <sticky_header>1</sticky_header>
		    <displayheader_wishlistbox>1</displayheader_wishlistbox>
		    <header_breakpoint>0</header_breakpoint>
		    <header_opacity>1</header_opacity>
		</header>
		
		<menu>
		    <homelink>1</homelink>
		    <verticalmenu>1</verticalmenu>
		    <accordionmenu>1</accordionmenu>
		</menu>
		<home>
		    <enable>1</enable>
		    <brandlogolimit>8</brandlogolimit>
		</home>
		<banner>
		    <enable>1</enable>
		    <displaybanner>default</displaybanner>
		    <bannerpossition>2</bannerpossition>
		    <breakpoint>0</breakpoint>
		    <bannerwithblock>1</bannerwithblock>
		    <bannerleftblock></bannerleftblock>
		    <bannerrightblock></bannerrightblock>
		    <bannerwidth>0</bannerwidth>
		    <caption_position>middle</caption_position>
		    <caption_text_align>left</caption_text_align>
		</banner>
		<product_slider>		    
		    <stop_on_hover>1</stop_on_hover>
		    <rewind_nav>1</rewind_nav>
		    <scroll_per_page>1</scroll_per_page>
		    <lazyload>1</lazyload>
		</product_slider>		
		<product_list>
		    <ajaxcart>1</ajaxcart>
		    <ajaxpopup>1</ajaxpopup>
		    <enable_alter>1</enable_alter>
		    <alter_image>sortorder</alter_image>
		    <alter_image_value>2</alter_image_value>
		    <image_aspect_ratio>0</image_aspect_ratio>
		    <newsaleicon>1</newsaleicon>
		    <addtocart_button>1</addtocart_button>
		    <compare_link>1</compare_link>
		    <wishlist_link>1</wishlist_link>
		    <quick_view>1</quick_view>
		    <product_border_onoff>0</product_border_onoff>
		    <display_productname_singleline>1</display_productname_singleline>
		</product_list>		
		<category>
		    <column_count>2</column_count>
		    <equalheight>0</equalheight>
		    <displaycategorysidebar>left</displaycategorysidebar>
		</category>
		<product_view>
		    <column1>6</column1>
		    <column2>6</column2>
		    <display_column3>0</display_column3>
		    <column3>2</column3>
		    <brandlogo>1</brandlogo>
		    <instock>1</instock>
		    <sku>1</sku>
		    <emailtofriend>1</emailtofriend>
		    <image_aspect_ratio>1</image_aspect_ratio>
		</product_view>
		<staticblock>
		    <topblock>0</topblock>
		    <bottomblock>1</bottomblock>
		    <brandblock>0</brandblock>
		    <bestsellerblock>0</bestsellerblock>
		</staticblock>
		<extra_settings>
		    <backtotop>1</backtotop>
		    <tooltip>1</tooltip>
		    <boxlayout>0</boxlayout>
		    <customcss>0</customcss>
		</extra_settings>		
	    </mygeneral>
	    <themelayout>
		<layout>
		    <responsiveness>1</responsiveness>
		    <layout_width>1280</layout_width>
		    <fluid_width>0</fluid_width>
		</layout>
	    </themelayout>
		
	</default>
	<!---->
    <adminhtml>
	<events>            	
	    <controller_action_postdispatch_adminhtml_system_config_save>
		    <observers>
			    <ExtraConfig>
				    <type>singleton</type>
				    <class>ExtraConfig/observer</class>
				    <method>hookOverWriteCss</method>
			    </ExtraConfig>
		    </observers>
	    </controller_action_postdispatch_adminhtml_system_config_save>			
	</events>
        <layout>
            <updates>
                <ExtraConfig>
                    <file>themeoptions.xml</file>
                </ExtraConfig>
            </updates>
        </layout>
    </adminhtml>     
</config>
