<?xml version="1.0"?>

<config>
    <sections>
        <peermegamenu translate="label" >
	    <label>Mega-menu</label>
            <sort_order>4</sort_order>
            <class>superclass</class>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>mycustom_tab</tab>
	    <groups>
                <options translate="label">
                    <label>Mega-menu Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Mega-menu enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
			<!--<add_jquery_min translate="label">
                            <label>Add Jquery Min File</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
			    <depends>
				<enabled>1</enabled>
			    </depends>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </add_jquery_min>-->
                        <mega_menu_easy_settings translate="label">
                            <label>Mega Menu Easy Settings</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
			    <depends>
				<enabled>1</enabled>
			    </depends>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mega_menu_easy_settings>
			<enabled_home_link translate="label">
                            <label>Enable Home Link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
			    <depends>
				<enabled>1</enabled>
			    </depends>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_home_link>
			
			<first_level_settings translate="label">
                            <label>First Level Menu Settings</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
			    <depends>
				<enabled>1</enabled>
			    </depends>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </first_level_settings>
			<display_category_thumnail_image translate="label">
                            <label>Display Thumnail Image</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
			    <depends>
				<enabled>1</enabled>
			    </depends>
			    <comment><![CDATA[<b>Note :</b> This will display category thumnail image only for first level category.]]></comment>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_category_thumnail_image>						
			
			<sub_level_settings translate="label">
                            <label>Sub Levels Menu Settings</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
			    <depends>
				<enabled>1</enabled>
			    </depends>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sub_level_settings>
			<display_subcategory_thumnail_image translate="label">
                            <label>Display Sub-level Thumnail Image</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
			    <depends>
				<enabled>1</enabled>
			    </depends>
			    <comment><![CDATA[<b>Note :</b> This will display category thumnail image only for sub level category.]]></comment>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_subcategory_thumnail_image>
			<subcategory_thumnail_image_position translate="label">
                            <label>Sub-level Thumnail Image Position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>megamenu/thumnailpositionsublevel</source_model>			    
			    <depends>
				<display_subcategory_thumnail_image>1</display_subcategory_thumnail_image>
				<enabled>1</enabled>			    
			    </depends>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </subcategory_thumnail_image_position>			
			
			<custom_link_settings translate="label">
                            <label>Custom Links Settings</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
			    <depends>
				<enabled>1</enabled>
			    </depends>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_link_settings>
			
			<enable_custom_Link translate="label">
                            <label>Enable Custom Link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
			    <depends>
				<enabled>1</enabled>
			    </depends>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_custom_Link>
			
			<add_custom_menu translate="label">
                            <label>Add Custom Menu</label>
                            <frontend_type>Multiselect</frontend_type>
                            <source_model>megamenu/Blocklist</source_model>
			    <depends>
				<enabled>1</enabled>
				<enable_custom_Link>1</enable_custom_Link>
			    </depends>
			    <comment><![CDATA[Create Your Menu From Static Block.<br><b> Note :</b> Use static block field as, <br>Block Title => as menu title<br>Identifier => as url link (add link without base url)<br>Content => content will not display for link. Example : www.example.com/index.php/contacts, base url is <b>www.example.com/index.php/</b>, and also add prefix "menu_", therefore <b>Identifier</b> will be <b>"menu_contacts"</b>.<br><b>Note : </b> To add custom block without link, make idetifier as "<b>menu_block_anything</b>.]]></comment>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </add_custom_menu>
			
			<custom_menu_order translate="label">
                            <label>Change Custom Menu Order</label>
                            <frontend_type>text</frontend_type>
			    <depends>
				<enabled>1</enabled>
				<enable_custom_Link>1</enable_custom_Link>
			    </depends>
			    <comment><![CDATA[write order number with comma "," separated. Example <b>2,1</b> here second will be displayed before first.]]></comment>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_menu_order>			
		    </fields>
		</options>
	    </groups>
        </peermegamenu>
    </sections>
</config>