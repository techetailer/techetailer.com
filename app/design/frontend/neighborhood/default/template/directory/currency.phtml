/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
<div class="currency dropdown">
    <div class="dropdown-toggle cover">
	<div class="currency-inner">
	    <div class="icon-currency">
		<?php echo Mage::app()->getLocale()->currency($this->getCurrentCurrencyCode())->getSymbol(); ?>
	    </div>
	    <div class="value">
		<?php echo $this->getCurrentCurrencyCode(); ?>
	    </div>
	</div>
    </div>

    <div class="dropdown-menu left-hand" name="currency" title="<?php echo $this->__('Select Your Currency') ?>" onchange="setLocation(this.value)">
	<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
	    <?php $symbol = Mage::app()->getLocale()->currency($_code)->getSymbol(); //echo $symbol?>
	    <a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>" class="currency_icon<?php if($_code==$this->getCurrentCurrencyCode()): ?> selected<?php endif; ?>">
		<span class="icon-currency"><?php echo $symbol; ?></span>
		<?php echo $_code; ?>
	    </a>
	    
	<?php endforeach; ?>
    </div>
</div>
<?php endif; ?>
